{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"types": ["vite/client", "node", "react/experimental"],
		"lib": ["es2021", "dom", "DOM.Iterable", "ES2022"],
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"declaration": true,
		"emitDeclarationOnly": true,
		"paths": {
			"types": ["./types/internal.d.ts"]
		}
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "build", "dist"]
}
